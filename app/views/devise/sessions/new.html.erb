<div class="contents row vh-100">
  <div class="container d-flex flex-column justify-content-center align-items-center">
    <h2 class="text-center">Log in</h2>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="form-group">
        <%= f.label :email, class:'control-label' %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control input-short' %>
      </div>

      <div class="form-group">
        <%= f.label :password, class:'control-label' %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control input-short' %>
      </div>
      <div class="actions text-center">
        <%= f.submit "Log in", class: 'btn btn-pink' %>
      </div>
    <% end %>
  </div>
</div>