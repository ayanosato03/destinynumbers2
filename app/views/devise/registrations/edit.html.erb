<div class="contents row vh-100">
  <div class="container d-flex flex-column justify-content-center align-items-center">
    <h2 class="text-center">Edit User</h2>

    <%= form_with(model: @user, url: edit_user_registration_path, id: 'edit_user', class: 'edit_user', local: true) do |f| %>
      <%= render 'shared/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :nickname, class: 'control-label' %>
        <%= f.text_field :nickname, autofocus: true, maxlength: "6", class: 'form-control input-short' %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: 'control-label' %>
        <%= f.email_field :email, class: 'form-control input-short' %>
      </div>

      <div class="form-group">
       <%= f.label :password, class: 'control-label' %>
       <%= f.password_field :password, autocomplete: "off", class: 'form-control input-short' %>
      </div>

      <div class="form-group">
       <%= f.label :password_confirmation, class: 'control-label' %>
       <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-short' %>
       </div>

      <div class="form-group">
        <%= f.label :current_password, class: 'control-label' %>
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control input-short' %>
      </div>

      <div class="actions text-center">
        <%= f.submit "Update", class: 'btn btn-pink' %>
      </div>
    <% end %>
  </div>
</div>